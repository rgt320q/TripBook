rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only manage their own profile and subcollections
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth.uid == userId;
    }

    // Community routes can be read by any authenticated user
    match /community_routes/{routeId} {
      allow read: if request.auth != null;
      // Only the owner can create, update or delete a shared route
      allow create, update, delete: if request.auth.uid == request.resource.data.sharedBy;

      // Comments can be added by any authenticated user
      match /comments/{commentId} {
        allow read, create: if request.auth != null;
        // Only the owner of the comment can update or delete it
        allow update, delete: if request.auth.uid == resource.data.userId;
      }

      // Ratings can be added/updated by any authenticated user
      match /ratings/{userId} {
        allow read, write: if request.auth.uid == userId;
      }
    }
  }
}
