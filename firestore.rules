rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- USER DATA ---
    match /users/{userId} {
      allow get: if request.auth != null;
      allow list: if request.auth.uid == userId;
      allow write: if request.auth.uid == userId;
    }

    match /users/{userId}/locations/{locationId} {
        allow read, write: if request.auth.uid == userId;
    }
    match /users/{userId}/routes/{routeId} {
        allow read, write: if request.auth.uid == userId;
    }
    match /users/{userId}/groups/{groupId} {
        allow read, write: if request.auth.uid == userId;
    }
    match /users/{userId}/reached_logs/{logId} {
        allow read, write: if request.auth.uid == userId;
    }

    // --- COMMUNITY ROUTES ---
    match /community_routes/{routeId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == request.resource.data.sharedBy;
      allow update: if request.auth != null;
      allow delete: if request.auth.uid == resource.data.sharedBy;

      // Comments
      match /comments/{commentId} {
        allow read, create: if request.auth != null;
        allow update, delete: if request.auth.uid == resource.data.userId;
      }

      // Ratings
      match /ratings/{ratingUserId} {
        allow read: if request.auth != null;
        allow write: if request.auth.uid == ratingUserId;
      }
    }
  }
}